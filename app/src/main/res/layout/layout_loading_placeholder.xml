<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_avatar_placeholder_padding"
    android:paddingBottom="@dimen/dimen_avatar_placeholder_padding">

    <View
        android:id="@+id/userName"
        android:layout_width="@dimen/dimen_placeholder_username_width"
        android:layout_height="@dimen/dimen_placeholder_username_height"
        android:layout_marginStart="@dimen/margin_padding_size_small"
        android:background="@drawable/drawable_placeholder_rectangle"
        app:layout_constraintBottom_toBottomOf="@id/separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/separator" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_size_small"
        android:layout_marginEnd="@dimen/margin_padding_size_small"
        android:text="@string/list_title_separator"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_xlarge"
        app:layout_constraintStart_toEndOf="@id/userName"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/repositoryName"
        android:layout_width="@dimen/dimen_placeholder_repositoryName_width"
        android:layout_height="@dimen/dimen_placeholder_username_height"
        android:layout_marginEnd="@dimen/margin_padding_size_small"
        android:background="@drawable/drawable_placeholder_rectangle"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@id/separator"
        app:layout_constraintStart_toEndOf="@id/separator"
        app:layout_constraintTop_toTopOf="@id/separator" />

    <View
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_padding_size_small"
        android:layout_marginStart="@dimen/margin_padding_size_small"
        android:layout_marginEnd="@dimen/margin_padding_size_small"
        android:background="@drawable/drawable_placeholder_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator" />

    <View
        android:id="@+id/description_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_placeholder_description_height"
        android:layout_marginStart="@dimen/margin_padding_size_small"
        android:layout_marginTop="@dimen/margin_padding_size_small"
        android:layout_marginEnd="@dimen/margin_padding_size_small"
        android:background="@drawable/drawable_placeholder_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description" />

    <View
        android:id="@+id/description_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_placeholder_description_height"
        android:layout_marginStart="@dimen/margin_padding_size_small"
        android:layout_marginTop="@dimen/margin_padding_size_small"
        android:layout_marginEnd="@dimen/margin_padding_size_small"
        android:background="@drawable/drawable_placeholder_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_2" />

</androidx.constraintlayout.widget.ConstraintLayout>